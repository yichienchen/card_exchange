<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/Background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/btn_Back"
        android:layout_width="150dp"
        android:layout_height="50dp"

        android:text="BACK"
        android:textColor="#111111" />

    <Switch
        android:id="@+id/switch_adv"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="200dp"
        android:text="off/on" />


    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Scan"
        android:id="@+id/StartScanButton"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/StopScanButton"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:text="Stop Scanning" />

    <!--<TextView-->
        <!--android:id="@+id/PeripheralTextView"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_marginTop="140dp"-->
        <!--android:maxLines="30"-->
        <!--android:scrollbars="vertical" />-->

    <ListView
        android:id="@+id/PeripheralListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="110dp"
        android:scrollbars="vertical" />


    <Spinner
        android:id="@+id/uuid_spinner"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@id/switch_adv"
        android:layout_alignTop="@+id/StopScanButton"
        android:layout_marginLeft="124dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="-31dp"
        android:dropDownWidth="match_parent" />

    <Button
        android:id="@+id/saved_card"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@id/switch_adv"
        android:layout_alignTop="@+id/StopScanButton"
        android:layout_marginTop="0dp"
        android:layout_marginRight="-5dp"
        android:dropDownWidth="match_parent"
        android:text="saved card" />

</RelativeLayout>